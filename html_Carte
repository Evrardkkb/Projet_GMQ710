  <label for="dist">Distance buffer arrÃªts (m)</label></h3>
  <input type="number" id="dist" value="500" min="50" step="50" />

  <button id="btnCalculer" onclick="calculer()">
    <span id="btnText">Lancer l'analyse</span>
    <svg id="btnIcon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" style="display:none;">
      <circle cx="12" cy="12" r="10" stroke-opacity="0.25"/>
      <path d="M22 12a10 10 0 0 1-10 10" />
    </svg>
  </button>

  <div id="loadingMessage" style="display:none;">
